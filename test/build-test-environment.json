{
    "variables": {
        "project_name": "nextcloud"
    },

    "builders": [
        {
            "type": "amazon-ebs",
            "ami_name": "{{user `project_name`}}-test-image",
            "force_deregister": "true",
            "force_delete_snapshot": "true",
            "instance_type": "t2.nano",
            "region": "us-east-1",
            "source_ami_filter": {
                "filters": {
                    "image-id": "ami-0817d428a6fb68645",
                    "root-device-type": "ebs"
                },
                "owners": ["099720109477"],
                "most_recent": true
            },
            "ssh_username": "ubuntu"
        }
    ],

    "provisioners": [
        {
            "type": "ansible",
            "playbook_file": "../ansible/nextcloud.yml",
            "groups": ["all"],
            "extra_arguments": [ "--extra-vars", "nextcloud_domain=_ trusted_domain='*'"]
        }
    ]
}

